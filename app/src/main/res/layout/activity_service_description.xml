<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <!-- Nome do Serviço -->
    <TextView
        android:id="@+id/textServiceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome do Serviço Voluntário"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nome da ONG -->
    <TextView
        android:id="@+id/textOngName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome da ONG"
        android:textSize="16sp"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/textServiceName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Local -->
    <TextView
        android:id="@+id/textLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Local: Rua Exemplo, 123"
        android:textSize="16sp"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/textOngName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Hora -->
    <TextView
        android:id="@+id/textTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Horário: 10h às 14h"
        android:textSize="16sp"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/textLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botão Participar -->
    <Button
        android:id="@+id/btnParticipar1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Participar"
        android:backgroundTint="#BB86FC"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
